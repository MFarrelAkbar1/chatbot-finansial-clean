{
  "name": "chatbot-finansial-mahasiswa",
  "version": "1.0.0",
  "description": "Chatbot finansial berbasis aturan untuk mahasiswa di WhatsApp",
  "main": "src/integrations/whatsapp.js",
  "scripts": {
    "start": "node src/integrations/whatsapp.js",
    "dev": "node src/integrations/whatsapp.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "install:deps": "npm install whatsapp-web.js qrcode-terminal dotenv winston jest"
  },
  "keywords": [
    "chatbot",
    "finansial",
    "whatsapp",
    "mahasiswa",
    "regex"
  ],
  "author": "Student Finance Bot",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.3.1",
    "json2csv": "^6.0.0-alpha.2",
    "qrcode-terminal": "^0.12.0",
    "sqlite3": "^5.1.7",
    "whatsapp-web.js": "^1.22.2",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/integrations/whatsapp.js"
    ]
  }
}
